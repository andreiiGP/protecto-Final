<div class="contenido2">
    <div class="sobrefondo2">
        <h1>CENTRO MEDICO BAM</h1>
        <h2>LISTADO DE pacientes</h2>
        <div id="tabla-responsive">
                <table>
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>apellido</th>
                            <th>Cédula </th>
                            <th>Edad </th>
                            <th>Teléfono</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each pacientes}}
                        <tr>
                            <form action="/pacientes/actualizar/{{cedula}}" method="post">
                                <td><input id="nombre" name="nombre" value="{{nombre}}" {{../opcion}}></td>
                                <td><input id="apellido" name="apellido" value="{{apellido}}" {{../opcion}}>
                                </td>
                                <td><input id="cedula" value="{{cedula}}" disabled></td>
                                <td><input id="edad" name="edad" value="{{edad}}" {{../opcion}}></td>
                                <td><input id="telefono" name="telefono" value="{{telefono}}" {{../opcion}}></td>
                                <td>
                                    {{#if ../estado}}
                                    <a class="eliminar" href="/pacientes/eliminar/{{cedula}}"><img
                                            src="/imagenes/eliminar.png"></a>
                                    <a class="editar" href="/pacientes/activar"><img src="/imagenes/editar.png"></a>
                                    {{else}}
                                    <input type="submit" value="Enviar">
                                    {{/if}}
                                </td>
                            </form>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <div class="opciones-tabla">
                    <a class="volver" href="/">Volver</a>
                    <a href="/pacientes/agregar-pacientes">Agregar pacientes</a>
                </div>
            </div>
        </div>
    </div>
</div>