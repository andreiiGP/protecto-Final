<h1>CENTRO MEDICO BAM</h1>
<h2>LISTADO DE CITAS MEDICAS</h2>
<table>
    <thead>
        <tr>
            <th>Cedula</th>
            <th>Fecha</th>
            <th>Especialidad</th>
        </tr>
    </thead>
    <tbody>
        {{#each citas}}
        <tr>
            <td>{{formatearFecha fecha}}</td>
            <td>{{cedula}}</td>
            <td>{{especialidad}}</td>
            
            <td>
                <a class="eliminar" href="/citas/eliminar/{{id}}">Eliminar</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>                                                                                                                                                                                            
<div class="opciones-tabla">
    <a class="volver" href="/">Volver</a>
    <a href="/citas/agregar-cita">Nueva cita</a>
</div>